<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MiTema" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorAccent">@color/accent_orange</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="titleTextColor">@color/white</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="toolbarTitle">
        <item name="fontFamily">@font/architects_daughter</item>
        <item name="android:textSize">@dimen/textViewHuesos</item>

    </style>

    <style name="textViewNombre" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:text">@string/nombre_prueba</item>
        <item name="android:textSize">@dimen/textViewNombre</item>
        <item name="fontFamily">@font/architects_daughter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewHuesos" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:text">@string/huesos_prueba</item>
        <item name="android:textSize">@dimen/textViewHuesos</item>
        <item name="fontFamily">@font/architects_daughter</item>
        <item name="android:textColor">@color/accent_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formulariosLayout" parent="">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margen_left</item>
        <item name="android:layout_marginTop">@dimen/margen_top</item>
        <item name="android:layout_marginRight">@dimen/margen_right</item>
        <item name="android:layout_marginBottom">@dimen/margen_bottom</item>
    </style>

    <style name="formulariosTxtImput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="confirmar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/confirmar</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/confirmar_top</item>
        <item name="android:layout_marginBottom">@dimen/confirmar_bottom</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="confirmacionTxtView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/pad_top</item>
        <item name="android:paddingBottom">@dimen/pad_bottom</item>
        <item name="android:paddingLeft">@dimen/pad_left</item>
        <item name="android:paddingRight">@dimen/pad_left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="layoutAux" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margen_top</item>

    </style>

</resources>